{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "noEmit": false,
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "lib": ["dom", "es2018"],
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  }
}