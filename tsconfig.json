{
  "compilerOptions": {
    "target": "es6",
    "removeComments": false,
    "moduleResolution": "node",
    "noEmit": false,
    "declaration": true,
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "baseUrl": ".",
    "module": "esnext",
    "outDir": "lib",
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "lib": [
      "dom",
      "es2018"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./src/custom_types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  }
}